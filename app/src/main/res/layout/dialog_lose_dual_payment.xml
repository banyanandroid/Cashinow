<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/linear_change_password"
    android:orientation="vertical"
    android:weightSum="15"
    >

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/txt_lose_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="You Lose a Challenge For 100 INR"
                android:textSize="16sp"
                android:textColor="@color/colorPrimary"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"/>

            <Button
                android:id="@+id/btn_pay"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Pay"
                android:background="@drawable/bg_gradient_1"
                android:textColor="@color/color_white"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="10"
                android:gravity="center">

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:background="@android:color/black"
                    android:layout_weight="5"
                    android:layout_gravity="center"
                    />

                <TextView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:text="Or"
                    android:background="@drawable/bg_circle"
                    android:gravity="center"
                    />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:background="@android:color/black"
                    android:layout_weight="5"
                    android:layout_gravity="center"
                    />

            </LinearLayout>


            <TextView
                android:id="@+id/txt_whatsapp_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Share on whatsapp for 5 Member or Group and Pay Only"
                android:textSize="16sp"
                android:textColor="@color/colorPrimary"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"/>

            <TextView
                android:id="@+id/txt_share_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Share On WhatsApp"
                android:textSize="16sp"
                android:textColor="@android:color/holo_red_light"
                android:gravity="center"/>

            <TextView
                android:id="@+id/txt_share_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Share On WhatsApp"
                android:textSize="16sp"
                android:textColor="@android:color/holo_red_light"
                android:gravity="center"/>

            <TextView
                android:id="@+id/txt_share_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Share On WhatsApp"
                android:textSize="16sp"
                android:textColor="@android:color/holo_red_light"
                android:gravity="center"/>

            <TextView
                android:id="@+id/txt_share_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Share On WhatsApp"
                android:textSize="16sp"
                android:textColor="@android:color/holo_red_light"
                android:gravity="center"/>

            <TextView
                android:id="@+id/txt_share_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Share On WhatsApp"
                android:textSize="16sp"
                android:textColor="@android:color/holo_red_light"
                android:gravity="center"/>

            <Button
                android:id="@+id/btn_whatsapp_pay"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Pay"
                android:background="@drawable/bg_gradient_1"
                android:textColor="@color/color_white"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                />

        </LinearLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>

