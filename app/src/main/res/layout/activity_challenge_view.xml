                                app:civ_border_width="2dp" />

                            <TextView
                                android:id="@+id/challenge_view_txt_opponent_name"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                                android:gravity="center_vertical"
                                android:text="Profile Name"
                                android:textColor="@color/color_dark"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="2">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginBottom="@dimen/activity_vertical_margin"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/challange_view_text_team_title1_pb"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_marginTop="@dimen/activity_vertical_margin"
                                    android:text="Team 1"
                                    android:textColor="@color/color_dark"
                                    android:textSize="18sp"
                                    android:textStyle="bold" />

                                <Button
                                    android:id="@+id/btn_opponent_challenge_team_1"
                                    android:layout_width="@dimen/btn_challenge_size"
                                    android:layout_height="@dimen/btn_challenge_size"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="@dimen/activity_vertical_margin"
                                    android:text="Team A"
                                    android:textColor="@color/colorPrimary" />


                                <SeekBar
                                    android:id="@+id/challenge_view_seek_bar_team1_pb"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                                    android:layout_marginTop="@dimen/activity_vertical_margin" />

                                <TextView
                                    android:id="@+id/challange_view_text_team1_pb"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:text=""
                                    android:textColor="@color/color_dark"
                                    android:textSize="18sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/challenge_view_text_progress1_pb"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:text=""
                                    android:textColor="@color/color_dark"
                                    android:textSize="18sp"
                                    android:textStyle="bold" />

                            </LinearLayout>

                            <View
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:background="@color/color_hash" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginBottom="@dimen/activity_vertical_margin"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/challange_view_text_team_title2_pb"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_marginTop="@dimen/activity_vertical_margin"
                                    android:text="Team 2"
                                    android:textColor="@color/color_dark"
                                    android:textSize="18sp"
                                    android:textStyle="bold" />


