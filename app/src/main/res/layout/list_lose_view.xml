<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:weightSum="10">

    <android.support.v7.widget.CardView
        android:id="@+id/cardview_lose_normal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_weight="2"
        android:layout_gravity="center"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="10"
            >


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Oh no ! You Lose a Challenge"
                android:textSize="16sp"
                android:textColor="@color/colorPrimary"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                />

            <TextView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="Vs"
                android:textColor="@color/colorPrimary"
                android:gravity="center"
                android:layout_gravity="center"
                android:background="@drawable/bg_circle"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="10"
                android:layout_marginTop="@dimen/activity_vertical_margin">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/list_view_lose_img_profile_pic"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    app:civ_border_color="@color/color_white"
                    app:civ_border_width="2dp"

                    />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="10"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txt_lose_player_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Player Name"
                        android:textColor="@android:color/black"
                        android:textSize="16sp"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="10"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Event Title"
                            android:textSize="16sp"
                            android:textColor="@color/colorPrimary"
                            android:layout_weight="5"
                            />

                        <TextView
                            android:id="@+id/txt_lose_event_title"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Event Title"
                            android:textColor="@android:color/black"
                            android:textSize="16sp"
                            android:layout_marginLeft="@dimen/activity_horizontal_margin"
                            android:layout_weight="5"
                            />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="10"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Account Details"
                            android:textSize="16sp"
                            android:textColor="@color/colorPrimary"
                            android:layout_weight="5"
                            />

                        <TextView
                            android:id="@+id/txt_lose_account_details"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Account Details"
                            android:textColor="@android:color/black"
                            android:textSize="16sp"
                            android:layout_marginLeft="@dimen/activity_horizontal_margin"
                            android:layout_weight="5"
                            />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="10"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Challenge Amount"
                            android:textSize="16sp"
                            android:textColor="@color/colorPrimary"
                            android:layout_weight="5"
                            />

                        <TextView
                            android:id="@+id/txt_lose_challenge_amount"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Account"
                            android:textColor="@android:color/black"
                            android:textSize="16sp"
                            android:layout_marginLeft="@dimen/activity_horizontal_margin"
                            android:layout_weight="5"
                            />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="10"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Amount"
                            android:textSize="16sp"
                            android:textColor="@color/colorPrimary"
                            android:layout_weight="5"
                            />

                        <TextView
                            android:id="@+id/txt_lose_amount"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Amount"
                            android:textColor="@android:color/black"
                            android:textSize="16sp"
                            android:layout_marginLeft="@dimen/activity_horizontal_margin"
                            android:layout_weight="5"
                            />

                    </LinearLayout>

                    <Button
                        android:id="@+id/btn_pay"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="Pay"
                        android:background="@drawable/bg_gradient_1"
                        android:textColor="@android:color/white"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/activity_vertical_margin"
                        android:layout_marginBottom="@dimen/activity_horizontal_margin"/>

                </LinearLayout>


            </LinearLayout>



        </LinearLayout>


    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/card_lose_view_special"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/txt_special_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="You Lose a Challenge For 100 INR"
                android:textSize="16sp"
                android:textColor="@color/colorPrimary"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"/>

            <TextView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="Vs"
                android:textColor="@color/colorPrimary"
                android:gravity="center"
                android:layout_gravity="center"
                android:background="@drawable/bg_circle"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="10"
                android:layout_marginTop="@dimen/activity_vertical_margin">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/list_view_special_img_profile_pic"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    app:civ_border_color="@color/color_white"
                    app:civ_border_width="2dp"

                    />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="10"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txt_special_player_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Player Name"
                        android:textColor="@android:color/black"
                        android:textSize="16sp"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="10"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Event Title"
                            android:textSize="16sp"
                            android:textColor="@color/colorPrimary"
                            android:layout_weight="5"
                            />

                        <TextView
                            android:id="@+id/txt_special_event_title"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Event Title"
                            android:textColor="@android:color/black"
                            android:textSize="16sp"
                            android:layout_marginLeft="@dimen/activity_horizontal_margin"
                            android:layout_weight="5"
                            />


                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="10"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Account Details"
                            android:textSize="16sp"
                            android:textColor="@color/colorPrimary"
                            android:layout_weight="5"
                            />

                        <TextView
                            android:id="@+id/txt_special_account_details"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Account Details"
                            android:textColor="@android:color/black"
                            android:textSize="16sp"
                            android:layout_marginLeft="@dimen/activity_horizontal_margin"
                            android:layout_weight="5"
                            />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="10"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Challenge Amount"
                            android:textSize="16sp"
                            android:textColor="@color/colorPrimary"
                            android:layout_weight="5"
                            />

                        <TextView
                            android:id="@+id/txt_special_challenge_amount"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Account"
                            android:textColor="@android:color/black"
                            android:textSize="16sp"
                            android:layout_marginLeft="@dimen/activity_horizontal_margin"
                            android:layout_weight="5"
                            />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="10"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Amount"
                            android:textSize="16sp"
                            android:textColor="@color/colorPrimary"
                            android:layout_weight="5"
                            />

                        <TextView
                            android:id="@+id/txt_special_amount"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Amount"
                            android:textColor="@android:color/black"
                            android:textSize="16sp"
                            android:layout_marginLeft="@dimen/activity_horizontal_margin"
                            android:layout_weight="5"
                            />

                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>

            <Button
                android:id="@+id/btn_special_pay"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Pay"
                android:background="@drawable/bg_gradient_1"
                android:textColor="@color/color_white"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="10"
                android:gravity="center">

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:background="@android:color/black"
                    android:layout_weight="5"
                    android:layout_gravity="center"
                    />

                <TextView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:text="Or"
                    android:background="@drawable/bg_circle"
                    android:gravity="center"
                    />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:background="@android:color/black"
                    android:layout_weight="5"
                    android:layout_gravity="center"
                    />

            </LinearLayout>


            <TextView
                android:id="@+id/txt_whatsapp_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Share on whatsapp for 5 Member or Group and Pay Only"
                android:textSize="16sp"
                android:textColor="@color/colorPrimary"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"/>

            <TextView
                android:id="@+id/txt_share_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Share On WhatsApp"
                android:textSize="16sp"
                android:textColor="@android:color/holo_red_light"
                android:gravity="center"/>

            <TextView
                android:id="@+id/txt_share_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Share On WhatsApp"
                android:textSize="16sp"
                android:textColor="@android:color/holo_red_light"
                android:gravity="center"/>

            <TextView
                android:id="@+id/txt_share_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Share On WhatsApp"
                android:textSize="16sp"
                android:textColor="@android:color/holo_red_light"
                android:gravity="center"/>

            <TextView
                android:id="@+id/txt_share_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Share On WhatsApp"
                android:textSize="16sp"
                android:textColor="@android:color/holo_red_light"
                android:gravity="center"/>

            <TextView
                android:id="@+id/txt_share_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Share On WhatsApp"
                android:textSize="16sp"
                android:textColor="@android:color/holo_red_light"
                android:gravity="center"/>

            <Button
                android:id="@+id/btn_special_whatsapp_pay"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Pay"
                android:background="@drawable/bg_gradient_1"
                android:textColor="@color/color_white"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                />

        </LinearLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>